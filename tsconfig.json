{
    "compilerOptions": {
      "module": "commonjs",
      "noImplicitAny": true,
      "esModuleInterop": true,
      "sourceMap": true,
      "jsx": "react",
      "jsxFactory": "tsx",
      "target": "es6",
      "experimentalDecorators": true,
      "preserveConstEnums": true,
      "suppressImplicitAnyIndexErrors": true,
      "importHelpers": true,
      "moduleResolution": "node"
  
    },
    "include": [
      "./*", "index.tsx"
    ],
    "exclude": [
      "node_modules"
    ]
  }